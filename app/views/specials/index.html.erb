<h1>Otdelenies</h1>
<%= link_to 'New Special', new_special_path %>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @spec.each do |s| %>
    <tr>
      <td><%= s.name %></td>
      <td><%= link_to 'Show', s %></td>
      <td><%= link_to 'Edit', edit_special_path(s) %></td>
      <td><%= link_to 'Destroy', s, method: :delete, data: { turbo_method: "delete" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

