<h1>Pacients</h1>
<%= link_to 'New Pacient', new_pacient_path %>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody>
  <% @pacients.each do |pacient| %>
    <tr>
      <td><%= pacient.name %></td>
      <td><%= link_to 'Show', pacient %></td>
      <td><%= link_to 'Edit', edit_pacient_path(pacient) %></td>
      <td><%= link_to 'Destroy', pacient, method: :delete, data: { turbo_method: "delete" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

