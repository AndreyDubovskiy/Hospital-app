<h1>Cards</h1>
<%= link_to 'New Card', new_card_pacient_path %>
<table>
  <thead>
  <tr>
    <th>adress</th>
    <th>diagnoz</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @cards.each do |card| %>
    <tr>
      <td><%= card.adress %></td>
      <td><%= card.diagnoz %></td>
      <td><%= link_to 'Show', card %></td>
      <td><%= link_to 'Edit', edit_card_pacient_path(card) %></td>
      <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

